@page
@model Final_Project.Pages_Characters.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Character.CharacterID" />
            <div class="form-group">
                <label asp-for="Character.CharacterName" class="control-label"></label>
                <input asp-for="Character.CharacterName" class="form-control" />
                <span asp-validation-for="Character.CharacterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Strength" class="control-label"></label>
                <input asp-for="Character.Strength" class="form-control" />
                <span asp-validation-for="Character.Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Speed" class="control-label"></label>
                <input asp-for="Character.Speed" class="form-control" />
                <span asp-validation-for="Character.Speed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.SpecialAbility" class="control-label"></label>
                <input asp-for="Character.SpecialAbility" class="form-control" />
                <span asp-validation-for="Character.SpecialAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
